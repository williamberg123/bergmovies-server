{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"airbnb-base"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [
					".js",
					".ts"
				]
			}
		}
	},
	"rules": {
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never"
			}
		],
		"no-tabs": "off",
		"import/prefer-default-export": "off",
		"indent": "off",
		"class-methods-use-this": "off",
		"max-len": "off",
		"consistent-return": "off",
		"camelcase": "off",
		"object-curly-newline": "off",
		"import/first": "off"
	}
}
